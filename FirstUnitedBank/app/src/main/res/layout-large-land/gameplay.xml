<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameplay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/check_layout"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/check_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/check_background" />

        <TextView
            android:id="@+id/check_small_pay_to_the_order_of"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/check_small_date"
            android:layout_below="@+id/check_small_date"
            android:layout_marginTop="8dp"
            android:fontFamily="serif-monospace"
            android:text="Company Name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/check_small_total_numbers"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/check_small_pay_to_the_order_of"
            android:layout_marginEnd="17dp"
            android:fontFamily="serif"
            android:text="200"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/check_small_total_written"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_small_total_numbers"
            android:layout_marginTop="22dp"
            android:layout_toStartOf="@+id/check_small_total_numbers"
            android:fontFamily="serif-monospace"
            android:text="Two Hundred and 0/100"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/check_small_for"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/check_small_total_written"
            android:layout_below="@+id/check_small_total_written"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="Computer System"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/check_small_signature"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/check_small_total_numbers"
            android:layout_alignTop="@+id/check_small_for"
            android:fontFamily="cursive"
            android:text="Jacob Longfield"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/check_small_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/check_small_signature"
            android:layout_marginTop="24dp"
            android:fontFamily="serif"
            android:text="1/22/18"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/check_small_routing_number"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignStart="@+id/check_small_for"
            android:layout_below="@+id/check_small_for"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/check_fake_routing" />

        <TextView
            android:id="@+id/check_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_small_for"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/check_small_routing_number"
            android:fontFamily="monospace"
            android:text="489652728"
            android:textColor="@android:color/black"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_layout"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="21dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/id_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/id_background" />

        <ImageView
            android:id="@+id/id_small_photograph"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/id_small_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_small_date_of_birth"
            android:layout_centerVertical="true"
            android:text="Android Character"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/id_small_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_small_photograph"
            android:layout_centerHorizontal="true"
            android:text="01/01/1997"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/id_small_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_small_date_of_birth"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/id_small_date_of_birth"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/id_small_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/id_small_address"
            android:layout_below="@+id/id_small_address"
            android:layout_marginTop="11dp"
            android:text="Male"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/id_small_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/id_small_sex"
            android:layout_below="@+id/id_small_sex"
            android:layout_marginTop="2dp"
            android:text="6&quot; 2'"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/id_small_issued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_small_height"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/id_small_height"
            android:text="10/17/89"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/id_expires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/id_small_issued"
            android:layout_alignBottom="@+id/id_small_issued"
            android:layout_toEndOf="@+id/id_small_name"
            android:text="10/17/98"
            android:textColor="@android:color/black"
            android:textSize="6sp" />
    </RelativeLayout>

</RelativeLayout>